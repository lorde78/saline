{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npx prisma generate && node ./bin/www",
    "start:dev": "npx prisma generate && nodemon --ignore node_modules ./bin/www",
    "dev": "npx prisma generate && nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "restart": "docker-compose down express && docker-compose up -d express",
    "kill": "docker system prune -a",
    "tsw": "tsc --watch",
    "prisma-install": "npm install @prisma/client",
    "prs-run": "cd node_modules/.prisma/client; npx prisma generate",
    "prs-migrate": "npx prisma migrate dev --schema=./prisma/schema.prisma",
    "faker-data": "npx prisma db seed",
    "debug-routes": "DEBUG=express:router node app.js",
    "db-push": "npx prisma db push --schema=./prisma/shema.prisma",
    "prisma-reset": "npx prisma migrate reset --schema=./prisma/shema.prisma",
    "test": "npx jest --watchAll --verbose"
  },
  "nodemonConfig": {
    "legacyWatch": true,
    "ext": "js,json,mjs,pug,ts"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.0",
    "clear-module": "^4.1.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-errors": "~1.6.3",
    "i": "^0.3.7",
    "jsonwebtoken": "^9.0.1",
    "morgan": "~1.9.1",
    "mysql": "^2.18.1",
    "nodejs-nodemailer-outlook": "^1.2.4",
    "nodemailer": "^6.9.4",
    "npm": "^9.8.0",
    "prisma": "^5.0.0",
    "pug": "^3.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/node": "^20.5.7",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
