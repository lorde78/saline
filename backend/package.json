{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start:dev": "nodemon --ignore node_modules ./bin/www",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "restart": "docker-compose down && docker-compose up -d",
    "kill": "docker system prune -a",
    "tsw": "tsc --watch"
  },
  "nodemonConfig": {
    "legacyWatch": true,
    "ext": "js,json,mjs,pug,ts"
  },
  "dependencies": {
    "clear-module": "^4.1.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "^4.18.2",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "mysql": "^2.18.1",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
